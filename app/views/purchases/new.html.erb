<h1>New purchases</h1>

<%= form_for @purchase do |f| %>

<%= f.label :product_id  %>
<%= collection_select(:purchase, :product_id, Product.all, :id, :name) %>
product_id_array.push(:id)




<%= f.label :customer_id  %>
<%= collection_select(:purchase, :customer_id, Customer.all, :id, :name) %>

<%= f.label :date %>
<%= datetime_select Date.today, prefix: :date %>

<%= f.label :receipt_id %>
<%= f.number_field :receipt_id %>


<p><%= f.submit %></p>
<% end %>
