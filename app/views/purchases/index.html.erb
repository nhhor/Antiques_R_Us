<h1>Purchases</h1>

<% if @purchases.any? %>
<ul>
  <% @purchases.each do |purchase| %>
  <li><%= link_to purchase.product.name, receipt_purchase_path(@receipt) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no purchases yet!</p>
<% end %>

<p><%= link_to "Add a new purchase", new_purchase_path %></p>
